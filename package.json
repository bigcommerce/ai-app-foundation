{
  "name": "ai-app-foundation",
  "version": "0.0.1",
  "author": "BigCommerce",
  "description": "BigCommerce Single-click App for enabling AI capabilities in CP",
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "lint": "next lint",
    "start": "next start",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write **/*.{js,ts,tsx}",
    "postinstall": "node ./postinstall.mjs",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm type-check"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "npm lint",
      "npm format"
    ]
  },
  "engines": {
    "node": "22.x"
  },
  "dependencies": {
    "@bigcommerce/big-design": "^0.36.2",
    "@bigcommerce/big-design-icons": "^0.23.2",
    "@bigcommerce/big-design-theme": "^0.19.2",
    "@google-cloud/vertexai": "^1.2.0",
    "@segment/snippet": "^4.16.2",
    "@sentry/nextjs": "^8.30.0",
    "@t3-oss/env-nextjs": "^0.3.1",
    "@tinymce/tinymce-react": "^4.3.0",
    "@types/fs-extra": "^11.0.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/styled-components": "^5.1.26",
    "@types/tinymce": "^4.6.6",
    "@vercel/analytics": "^1.0.2",
    "edge-csrf": "^1.0.7",
    "firebase": "^9.23.0",
    "fs-extra": "^11.1.1",
    "google-auth-library": "^9.10.0",
    "jsonwebtoken": "^9.0.0",
    "next": "^13.4.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "styled-components": "^5.3.11",
    "superjson": "1.12.2",
    "zod": "^3.22.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^15.0.7",
    "@types/eslint": "^8.37.0",
    "@types/jest": "^29.5.12",
    "@types/node": "18.18.4",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@whatwg-node/fetch": "^0.9.17",
    "eslint": "^8.40.0",
    "eslint-config-next": "^13.4.2",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.1",
    "request": "^2.88.2",
    "ts-jest": "^29.1.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.4"
  },
  "eslintIgnore": [
    "lib"
  ],
  "browser": {
    "fs": false,
    "net": false,
    "tls": false,
    "child_process": false
  }
}
